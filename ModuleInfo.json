{
  "Name": "SMG2_HorrorRestored",
  "Author": "Super Hackio",
  "Description": "A brand new puzzle-based time-mangement powerup based on SMG2s scrapped Horror game state",
  "RequiredAPIs": [ "MarioSubMeter_API" ],
  "SupportedGames": [ "SB4" ],

  "ModuleData": [
    {
      "NameObjFactory": [
        {
          "Name": "HorrorItem",
          "Function": "createExtActor<HorrorItem>",
          "Include": "HorrorItem.h"
        },
        {
          "Name": "HorrorSwitch",
          "Function": "createExtActor<HorrorSwitch>",
          "Include": "HorrorSwitch.h"
        },
        {
          "Name": "HorrorForbidThrowArea",
          "Function": "createExtActor<HorrorForbidThrowArea>",
          "Include": "HorrorForbidThrowArea.h"
        },
        {
          "Name": "HorrorLimitArea",
          "Function": "createExtActor<HorrorLimitArea>",
          "Include": "HorrorLimitArea.h"
        }
      ],
      "AreaObjMgr": [
        {
          "Name": "HorrorForbidThrow",
          "MaxCount": "32",
          "Function": "AreaObjContainer::createManager<AreaObjMgr>"
        },
        {
          "Name": "HorrorLimit",
          "MaxCount": "32",
          "Function": "AreaObjContainer::createManager<AreaObjMgr>"
        }
      ],
      "MarioSubMeter": [
        {
          "RefName": "SubMeterHorror",
          "LayoutName": "HorrorMeter",
          "Behavior": "2",
          "InitFunc": "MR::initHorrorMeter",
          "Include": "Horror.h"
        }
      ],
      "SceneObjHolder": [
        {
          "Name": "SCENE_OBJ_HORROR_BONE_HOLDER",
          "Function": "SceneObjHolder_createHorrorBoneGroup",
          "Include": "HorrorBone.h"
        }
      ],
      "ExtMorphSwitchArea": [
        {
          "Name": "Horror",
          "Function": "MR::isHorrorModeActive",
          "Include": "Horror.h"
        }
      ]
    }
  ]
}